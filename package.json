{
  "name": "desktopwebapps",
  "version": "1.0.4",
  "description": "An Electron app with persistent tabs",
  "main": "src/main.js",
  "build": {
    "appId": "com.DesktopWebApps",
    "productName": "Desktop Web Apps",
    "win": {
      "target": "nsis",
      "icon": "assets/DWAIconTransparent.ico"
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dompurify": "^3.0.6",
    "express": "^4.21.2",
    "spotify-web-api-node": "^5.0.2"
  }
}
